generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --------------------------------------------------------------------------
// Models
enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Todo {
  id          Int        @id @default(autoincrement())
  title       String
  description String? // Thêm mô tả cho chuyên nghiệp
  status      TaskStatus @default(TODO)
  position    Int        @default(0) // Để sắp xếp thứ tự trong cột
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
